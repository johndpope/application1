<%
  modal = render partial: 'form', locals: {dealer: dealer}
%>

$("#modal_dealer").remove()
$(".modal-backdrop").remove()
$("#modal_dealer").modal('destroy').remove()
$('body').append('<%= escape_javascript(modal) %>');
$("#modal_dealer").modal({show: true, backdrop: 'static', keyboard: false}).on('hidden.bs.modal', function (e) {
  $(this).remove()
})
$('.has-error').popover({
  trigger: 'hover',
  placement: 'bottom',
  animation: true
});
$('#dealer_brand_id').autocomplete({ source: $('#brand_list').val().split('<sep/>') });
$('.phone').inputmask("mask", {"mask": "(999)-999-9999 [x99999]"});
