<% title 'Batches' %>

<% if flash[:notice] %>
	<div id="notice_explanation" class="alert alert-success alert-dismissable alert-fade-out">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
		<h4><i class="icon fa fa-exclamation-circle"></i><%= flash[:notice] %></h4>
	</div>
<% end %>

<div id="batches_list">
	<div class="row">
		<div class="col-md-5">
			<%= link_to 'New batch'.html_safe, new_batch_path, remote: true , class: 'btn btn-sm btn-primary' %>
		</div>
		<div class="col-md-7">
			<div class="form-group">
				<label class="control-label"><i class="fa fa-database"></i> Total search results:</label>
				<span id="totals" class="badge bg-blue"><%= @batches.size%></span>
			</div>
		</div>
	</div>
	<table id="batches_table" class="table table-bordered table-striped dataTable">
		<thead>
			<tr>
				<th style="width: 50px;" class="text-center" id="id-th" data-field="id">ID</th>
				<th>Title</th>
				<th>Description</th>
				<th class="text-center">Accounts List</th>
				<th class="text-center">Accounts JSON</th>
				<th style="width: 130px;" class="text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @batches.each do |batch| %>
				<%= render partial: 'batch_row', locals: {batch: batch} %>
			<% end %>
		</tbody>
	</table>
</div>
