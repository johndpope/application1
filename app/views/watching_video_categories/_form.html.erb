<%= form_for @watching_video_category, :html => { :multipart => true } do |f| %>
  <div class="row">
    <% if @watching_video_category.errors.any? %>
      <div class="col-md-12">
        <div id="error_explanation" class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <h4><i class="icon fa fa-exclamation-circle"></i> <%= pluralize(@watching_video_category.errors.count, 'error') %> prohibited this watching video category from being saved</h4>
        </div>
      </div>
    <% end %>
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group <%= 'has-error' if @watching_video_category.errors[:name].present? %>" data-content="<%= @watching_video_category.errors[:name].try(:join, ',') %>">
                <%= f.label :name, class: 'control-label' %>
                <%= f.text_field :name, class: 'form-control' %>
              </div>
              <div id="phrases_block" class="form-group">
                <%= f.label :phrases, id: "phrases_label", class: 'control-label' %>
                <%= f.text_field :phrases, { size: '40x5', class: 'form-control', placeholder: "Phrases enter or comma separated"} %>
              </div>
              <div class="form-group col-md-12">
                <div class="actions pull-right">
                  <%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, watching_video_categories_path, class: 'btn btn-sm btn-primary' %>
                  <%= f.submit :class => 'btn btn-sm btn-success', :id => 'watching_video_category_submit' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
