<%
  modal_dom_id = dom_id(youtube_video_search_phrase, 'modal')
  row_id = dom_id(youtube_video_search_phrase, 'row')
  new_row = render partial: 'youtube_video_search_phrases/youtube_video_search_phrase_row', locals: {youtube_video_search_phrase: youtube_video_search_phrase}
%>

$('#youtube_video_search_phrases_table tbody').append('<%= escape_javascript(new_row) %>');
$('#modal_youtube_video_search_phrase').modal('hide')
$('.has-error').popover({
  trigger: 'hover',
  placement: 'bottom',
  animation: true
});
search_phrases_size = document.getElementById('youtube_video_search_phrases_table').getElementsByTagName("tbody")[0].getElementsByTagName("tr").length;
$('#search_phrases_size').text(search_phrases_size);
if (search_phrases_size > 0) {
  $('#youtube_video_search_phrases_table').show();
  $('#youtube_video_search_phrases_empty_alert').hide();
} else {
  $('#youtube_video_search_phrases_table').hide();
  $('#youtube_video_search_phrases_empty_alert').show();
}
