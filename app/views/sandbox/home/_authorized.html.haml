          %h5 BLENDER VIDEO
          %ul
            %li.q1 Find out detailed information about our video production.
            %li.q2 ﻿Go through our interactive demo-version in order to see the results in real time.
          .sp-footer-row
            = link_to sandbox_client_path(client_uuid), target: 'blank', class: "sp-btn" do
              = "TRY"

      .media-block{data: {id: 1}}
        .part1
          = image_tag "/assets/sandbox/home_page/icon_coming_soon.png", class: "label-coming-soon"
          = link_to 'javascript://', class: "slide-item", data: {url: "/system/sandbox/demo_video/image_blending.mp4"} do
            = image_tag "/assets/sandbox/home_page/Product_2.png", class: "sp-product-img"
            = image_tag "/assets/sandbox/home_page/Play.png", class: "sp-play-btn"
        .part2
          %h5 BLENDER IMAGES
          %ul
            %li.q3 Find out detailed information about our Advertising image production
          .sp-footer-row
            = link_to 'javascript://', class: "sp-btn", data: {url: "/system/sandbox/demo_video/coming_soon_blender_images.mp4"} do
              = "TRY"

      .media-block{data: {id: 2}}
        .part1
          = image_tag "/assets/sandbox/home_page/icon_coming_soon.png", class: "label-coming-soon"
          = link_to 'javascript://', class: "slide-item", data: {url: "/system/sandbox/demo_video/coming_soon.mp4"} do
            = image_tag "/assets/sandbox/home_page/Product_3.png", class: "sp-product-img"
            = image_tag "/assets/sandbox/home_page/Play.png", class: "sp-play-btn"
        .part2
          %h5 MEDIA VOLUNTEER
          %ul
            %li.q4 Upload/share your content
            %li.q5 Specify some info about uploaded content
            %li.q6 Enjoy seeing your content in thousands or our videos on youtube & google
          .sp-footer-row
            = link_to 'javascript://', class: "sp-btn coming_soon_link", data: {url: "/system/sandbox/demo_video/coming_soon.mp4"} do
              = "TRY"

    .sp-slides
      .sp-slide
        %img{:alt => "", :src => "/assets/sandbox/home_page/Background_2.png", class: "sp-background-slide-image"}
        .sp-background-wrap
      .sp-slide
        %img{:alt => "", :src => "/assets/sandbox/home_page/Background_1.png", class: "sp-background-slide-image"}
        .sp-background-wrap
      .sp-slide
        %img{:alt => "", :src => "/assets/sandbox/home_page/Background_3.png", class: "sp-background-slide-image"}
        .sp-background-wrap

