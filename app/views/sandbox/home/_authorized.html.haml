      .col-lg-9.col-md-12.col-sm-12
        .row
          .col-lg-5.col-md-5.col-sm-5= image_tag "/assets/sandbox/home_page/Image_3.png", class: "img-responsive sp-image3"
          .col-lg-7.col-md-6.col-sm-7.col-middle
