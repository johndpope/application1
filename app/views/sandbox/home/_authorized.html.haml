%header
  #sp-id.slider-pro
    = image_tag "/assets/sandbox/home_page/floor.png", class: "sp-image-floor"
    .video_container.hidden
      = image_tag "/assets/sandbox/home_page/monitor.png", class: "sp-image-monitor"
      %video.video-js.vjs-default-skin#video3{controls: "controls", data:{setup: "{}"}, poster: ""}
        %source{src: "/system/sandbox/demo_video/echo_video_1.mp4", type: "video/mp4"}

    .sp-media-block
      .media-block.active{data: {id: 0}}
        .part1
          = image_tag "/assets/sandbox/home_page/icon_new.png", class: "label-new"
          = link_to 'javascript://', class: "slide-item", data: {url: "/system/sandbox/demo_video/echo_video_1.mp4"} do
            = image_tag "/assets/sandbox/home_page/Product_1.png", class: "sp-product-img"
            = image_tag "/assets/sandbox/home_page/Play.png", class: "sp-play-btn"
