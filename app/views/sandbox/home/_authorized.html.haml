      .row
        .col-md-12
          %h1 Client Sign Up Guide
      .row
        .guid_block
          .guid-step
            = link_to 'javascript://' do
              = image_tag "/assets/sandbox/home_page/step1.png", class: "rounded-circle guide_img"
