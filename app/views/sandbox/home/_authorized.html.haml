  %section.section_1#blender_video
    .container-fluid
      .col-sm-12.col-md-12.col-lg-9
        .row
          .col-sm-5.col-md-5= image_tag "/assets/sandbox/home_page/Image_1.png", class: "img-responsive sp-image1"
          .col-sm-7.col-md-6.col-middle
