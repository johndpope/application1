%td.image
  = link_to 'javascript://' do
    = image_tag "/sandbox/icons/icon8.png"
%td.time
  = link_to 'javascript://' do
    %span.num= 2
%td.regenerate_block
  .col-md-2
    = link_to regenerate_video_title_sandbox_client_video_blenders_path(params[:client_uuid]), class: "btn btn-regenerate", data: {remote: true, "disable-with" => '<i class="fa fa-refresh fa-2x fa-spin-hover fa-spin"></i>'} do
      = fa_icon 'refresh 2x'
  .col-md-10
    .title-block
      %h3
        %b Video title
        %span.font_red_no-weight patterns
      .sm_description
        Max Title Length:
        %span.font_red 100 characters
    .video_title_components
      - @video_title_schema.each_with_index do |(k,v),i|
        .label_block
          = link_to 'javascript://' do
            .ch_name_label
              .header=k.to_s.humanize.upcase
              .data=v
          .plus="+" unless i+1 == @video_title_schema.size
