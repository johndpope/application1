.col-md-2
  = link_to 'javascript://' do
    = image_tag "/sandbox/icons/icon6.png", class: 'cs_search_img'
.col-md-10
  .title-block
    %h2
      %b Channel
      %span.font_red_no-weight URL link
  %br
  - arr = [('a'..'z'),('A'..'Z')].map(&:to_a).flatten
  - str = (0..24).map{arr[rand(arr.length)]}.join
  = text_field_tag 'url_link', "https://www.youtube.com/channel/#{str}", class: "form-control disabled", placeholder: ""
  %br
  - unless @channel_arts.blank?
    .channel_art_container= link_to (image_tag @channel_arts.first.file.url, {class: 'channel_art_selected', alt: 'no image', data: {id: @channel_arts.first.id} }), @channel_arts.first.file.url, {target: '_blank'}
  - else
    .channel_art_container= link_to (image_tag '/sandbox/icons/alt.png', class: 'alt-image', alt: 'no image'), 'javascript://', {target: '_blank'}
  %br
  - unless @channel_icon.blank?
    .col-md-2= link_to (image_tag @channel_icon.file.url, {class: 'channel_icon_img channel_icon_img_main', alt: 'no image'}), @channel_icon.file.url, {target: '_blank'}
  - else
    .col-md-2= link_to (image_tag '/sandbox/icons/icon7.png', {class: 'channel_icon_img channel_icon_img_main', alt: 'no image'}), 'javascript://', {target: '_blank'}
  .col-md-10.cs_bq_content
    %h3.channel_name=@channel_name
    %p 43600 subscribers
