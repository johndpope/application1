.col-md-2
.col-md-6
  %table.setup_table
    %tr
      %td.item_image=link_to (image_tag "/sandbox/icons/icon1.png", class: "horizontal_img"), 'javascript://', {class: 'img_link'}
      %td.item_time
        = link_to 'javascript://', class: "item_link" do
          = image_tag '/assets/sandbox/cv-line-numb.png', class: 'round_img'
          .item_number 1
      %td.item_content
        %h3 Channel Art
        .sm_description
          Size:
          %span.font_red 1920x1080
          px.
        .sm_description
          Format:
          %span.font_red png,jpg

    %tr
      %td.item_image=link_to (image_tag "/sandbox/icons/icon2.png"), 'javascript://', {class: 'img_link'}
      %td.item_time
        = link_to 'javascript://', class: "item_link" do
          = image_tag '/assets/sandbox/cv-line-numb.png', class: 'round_img'
          .item_number 2
      %td.item_content
        %h3 Channel Icon
        .sm_description
          Size:
          %span.font_red 250x250
          px.
        .sm_description
          Format:
          %span.font_red png,jpg
    %tr
      %td.item_image=link_to (image_tag "/sandbox/icons/icon3.png"), 'javascript://', {class: 'img_link'}
      %td.item_time
        = link_to 'javascript://', class: "item_link" do
          = image_tag '/assets/sandbox/cv-line-numb.png', class: 'round_img'
          .item_number 3
      %td.item_content
        %h3 Channel Name
        .sm_description
          Max Title Length:
          %span.font_red 50 characters
    %tr
      %td.item_image=link_to (image_tag "/sandbox/icons/icon4.png", class: "vertical_img"), 'javascript://', {class: 'img_link'}
      %td.item_time
        = link_to 'javascript://', class: "item_link" do
          = image_tag '/assets/sandbox/cv-line-numb.png', class: 'round_img'
          .item_number 4
      %td.item_content
        %h3 Channel Description
        .sm_description
          Max Description length:
          %span.font_red 500 characters
    %tr
      %td.item_image=link_to (image_tag "/sandbox/icons/icon5.png", class: "horizontal_img"), 'javascript://', {class: 'img_link'}
      %td.item_time.last
        = link_to 'javascript://', class: "item_link" do
          = image_tag '/assets/sandbox/cv-line-numb.png', class: 'round_img'
          .item_number 5
      %td.item_content
        %h3 Channel Tags
        .sm_description
          Max Tags:
          %span.font_red 500 characters
.col-md-4
