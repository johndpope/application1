      = link_to 'javascript://', class: "nav_item" do
        = fa_icon 'circle-thin 2x'
      = link_to 'javascript://', class: "nav_item" do
        = fa_icon 'circle-thin 2x'
      = link_to 'javascript://', class: "nav_item" do
        = fa_icon 'circle-thin 2x'
      = link_to 'javascript://', class: "nav_right" do
        = fa_icon 'angle-right 3x'
