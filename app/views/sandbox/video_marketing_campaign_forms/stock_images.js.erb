<%
  stock_images_results = render partial: '/sandbox/video_marketing_campaign_forms/content_step/images/system_images/stock_images_results', locals: {stock_images: stock_images}
  stock_images_paginate = render partial: '/sandbox/video_marketing_campaign_forms/content_step/images/system_images/stock_images_paginate', locals: {stock_images: stock_images}
%>
<% if stock_images.total_count == 0 %>
  $('#stock_images_containder').hide();
<% end %>
$('#stock_images_results').replaceWith('<%= escape_javascript(stock_images_results) %>');
$('.stock_images_paginate').replaceWith('<%= escape_javascript(stock_images_paginate) %>');
$('.page, .next, .first, .prev, .next_page').on('click', function () {
  $('.animationload').show();
});
$('.animationload').hide();

$.each($('#video_marketing_campaign_form_deleted_stock_images').val().toString().replace('{', '').replace('}', '').split(","), function (index, value) {
  $("#artifacts_image_" + value).addClass("disabled-block");
});
