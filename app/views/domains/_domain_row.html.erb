<tr id="<%= dom_id(domain, 'row')%>">
  <td class="text-center"><%= domain.id %></td>
  <td><%= domain.name %></td>
  <td class="text-center">
    <% if domain.parked %>
      <%= link_to 'YES', { controller: "domains", parked: true, limit: params[:limit]}, class: 'btn btn-success btn-xs sort_link' %>
    <% else %>
      <%= link_to 'NO', { controller: "domains", parked: false, limit: params[:limit]}, class: 'btn btn-danger btn-xs sort_link' %>
    <% end %>
  </td>
  <td><%= local_time(domain.updated_at, format: '%m/%d/%y %I:%M %p', title: domain.updated_at.try(:in_time_zone, 'Eastern Time (US & Canada)').try(:strftime, '%m/%d/%y %I:%M %p - Eastern Time (US & Canada)')) if domain.updated_at.present?%></td>
  <td><%= local_time(domain.created_at, format: '%m/%d/%y %I:%M %p', title: domain.created_at.try(:in_time_zone, 'Eastern Time (US & Canada)').try(:strftime, '%m/%d/%y %I:%M %p - Eastern Time (US & Canada)')) if domain.created_at.present?%></td>
  <td class="text-center actions">
    <div class="btn-group btn-group-custom">
      <%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_domain_path(domain), { class: 'btn btn-xs btn-primary', remote: true, title: 'Edit' } %>
      <%= link_to '<i class="fa fa-eraser"></i> Delete'.html_safe, domain, method: :delete, data: { confirm: 'Are you sure?', remote: true }, class: 'btn btn-xs btn-danger' %>
    </div>
  </td>
</tr>
