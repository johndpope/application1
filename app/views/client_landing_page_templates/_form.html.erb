<%= form_for @client_landing_page_template do |f| %>
  <% if @client_landing_page_template.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable alert-fade-out">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <h4><i class="icon fa fa-exclamation-circle"></i> <%= pluralize(@client_landing_page_template.errors.count, 'error') %> prohibited this cleint landing page template from being saved</h4>
    </div>
  <% end %>
	<div class="form-group <%= 'has-error' if @client_landing_page_template.errors[:preview].present? %>" data-content="<%= @client_landing_page_template.errors[:preview].try(:join, ',') %>">
		<%= f.label :preview, class: 'control-label' %>
		<%= link_to (image_tag URI::escape(@client_landing_page_template.preview.url(:thumb), '[]'), { class: 'thumbnail img-thumbnail' }), URI::escape(@client_landing_page_template.preview.url(:original), '[]'), { target: '_blank' } if @client_landing_page_template.id && @client_landing_page_template.preview.present? %>
		<%= f.file_field :preview %>
	</div>
  <div class="form-group <%= 'has-error' if @client_landing_page_template.errors[:name].present? %>" data-content="<%= @client_landing_page_template.errors[:name].try(:join, ',') %>">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
  </div>
  <div class="form-group <%= 'has-error' if @client_landing_page_template.errors[:file_name].present? %>" data-content="<%= @client_landing_page_template.errors[:file_name].try(:join, ',') %>">
    <%= f.label :file_name, class: 'control-label' %>
    <%= f.text_field :file_name, class: 'form-control', placeholder: "File name" %>
  </div>
  <div class="form-group">
    <div class="actions pull-right">
      <%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, client_landing_page_templates_path, class: 'btn btn-sm btn-primary' %>
      <%= f.submit :class => 'btn btn-sm btn-success', :id => 'client_landing_page_template_submit' %>
    </div>
  </div>
<% end %>
