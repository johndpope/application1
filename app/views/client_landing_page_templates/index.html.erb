<% title 'Client Landing Page Templates' %>

<% if flash[:notice] %>
	<div id="notice_explanation" class="alert alert-success alert-dismissable alert-fade-out">
		<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
		<h4><i class="icon fa fa-exclamation-circle"></i><%= flash[:notice] %></h4>
	</div>
<% end %>

<div id="client_landing_page_templates_list">
	<div class="row">
		<div class="col-md-5">
			<%= link_to 'New Client Landing Page Template', new_client_landing_page_template_path, class: 'btn btn-sm btn-primary' %>
		</div>
		<div class="col-md-7">
			<div class="form-group">
				<label class="control-label"><i class="fa fa-database"></i> Total search results:</label>
				<span class="badge bg-blue"><%= @client_landing_page_templates.size%></span>
			</div>
		</div>
	</div>
	<% unless @client_landing_page_templates.to_a.empty? %>
		<table id="client_landing_page_templates_table" class="table table-bordered table-striped dataTable">
			<thead>
				<tr>
					<th style="width: 50px;" class="text-center">ID</th>
					<th>Name</th>
					<th>File Name</th>
					<th style="width: 130px;" class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @client_landing_page_templates.each do |client_landing_page_template| %>
					<tr>
						<td class="text-center"><%=client_landing_page_template.id %></td>
						<td><%=client_landing_page_template.name %></td>
						<td><%=client_landing_page_template.file_name %></td>
						<td class="text-center actions">
							<div class="btn-group btn-group-custom">
								<%= link_to '<i class="fa fa-pencil"></i> Edit'.html_safe, edit_client_landing_page_template_path(client_landing_page_template),  { class: 'btn btn-xs btn-primary' } %>
								<%= link_to '<i class="fa fa-eraser"></i> Delete'.html_safe, client_landing_page_template, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	<% end %>

	<% if @client_landing_page_templates.to_a.empty? %>
		<div class="row col-md-12">
			<br>
			<div class="alert alert-info">No items available</div>
		</div>
	<% end %>
</div>
