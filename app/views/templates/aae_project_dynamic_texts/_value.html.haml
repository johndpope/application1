- id = SecureRandom.uuid
.form-group{class: 'control-box dynamic-text-value'}
  .row
    .col-md-10
      = text_area_tag "values[]", "", class: "form-control text-counter", rows: 3, id: id, maxlength: maxlength, placeholder: placeholder
    .col-md-2
      = link_to t('remove'), 'javascript:', class: "btn btn-sm btn-danger pull-right remove-dynamic-text-value"
:javascript
  $('##{id}').textcounter({
    type: "character",
    countSpaces: true,
    stopInputAtMaximum: false,
    counterText: "Characters Count: "
  })
