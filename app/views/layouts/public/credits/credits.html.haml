!!!
%html
  %head
    %title= yield :title
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' }
    = stylesheet_link_tag 'public/credits/application'
    = stylesheet_link_tag 'common'
    = stylesheet_link_tag params[:controller]
    = csrf_meta_tags
    = yield :stylesheets
  %body{class: "skin-blue sidebar-mini sidebar-open #{@body_class}", data: {page: @data_page}}
    .wrapper
      = render partial: 'layouts/public/credits/header'
      = render partial: 'layouts/public/credits/sidebar'
      .content-wrapper
        %section.content-header
          - if content_for? :header
            %h1
              = yield :header
              - if content_for? :small_header
                %small= yield :small_header
          = breadcrumbs separator: ' &rsaquo; ', class: :breadcrumb			
        %section.content= yield
      %footer.main-footer
        %strong
          = t :copyright
          &copy;
          = Time.now.year
        = link_to "valynteen.com", "http://valynteen.com"
    = javascript_include_tag 'public/credits/application'
    = javascript_include_tag params['controller']
    = yield :javascripts
