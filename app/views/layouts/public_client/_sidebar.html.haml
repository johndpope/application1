%aside.main-sidebar
  %section.sidebar
    %ul.sidebar-menu
      - action_icons = {dashboard: "dashboard", youtube_videos: "youtube", youtube_channels: "youtube-play", client_landing_pages: "globe", assets: "folder"}
      - %w(dashboard youtube_channels youtube_videos client_landing_pages assets).each do |a|
        %li{class: ('active' if params[:action] == a)}
          = link_to eval("public_client_#{a}_path(@client.public_profile_uuid)") do
            = fa_icon action_icons[a.to_sym]
            %span= t(a)
