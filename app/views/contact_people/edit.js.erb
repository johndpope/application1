<%
  modal = render partial: 'form', locals: {contact_person: @contact_person, resource_id: @contact_person_resource_id, resource_type: @contact_person_resource_type}
  modal_dom_id = dom_id(@contact_person, 'modal')
%>

$("div.modal-backdrop.fade.in").remove();
$('#<%= modal_dom_id %>').remove();
$('body').append('<%= escape_javascript(modal) %>');
$("#<%= modal_dom_id %>").modal({show: true, backdrop: 'static', keyboard: false}).on('hidden.bs.modal', function (e) {
  $(this).remove()
});
$('.has-error').popover({  trigger: 'hover',  placement: 'bottom',  animation: true});
