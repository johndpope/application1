<%= form_for @api_account do |f| %>
  <div class="row">
    <% if @api_account.errors.any? %>
      <div class="col-md-12">
        <div id="error_explanation" class="alert alert-danger alert-dismissable alert-fade-out">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <h4><i class="icon fa fa-exclamation-circle"></i> <%= pluralize(@api_account.errors.count, 'error') %> prohibited this setting from being saved</h4>
        </div>
      </div>
    <% end %>
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <%= render 'form_fields', {:f => f} %>
              <div class="form-group col-md-12">
                <div class="actions pull-right">
                  <%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, api_accounts_path, class: 'btn btn-sm btn-primary' %>
                  <%= f.submit :class => 'btn btn-sm btn-success', :id => 'setting_submit' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
