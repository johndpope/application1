<%= form_for @phone_provider do |f| %>
	<div class="row">
		<% if @phone_provider.errors.any? %>
			<div class="col-md-12">
				<div id="error_explanation" class="alert alert-danger alert-dismissable alert-fade-out">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
					<h4><i class="icon fa fa-exclamation-circle"></i> <%= pluralize(@phone_provider.errors.count, 'error') %> prohibited this phone provider from being saved</h4>
				</div>
			</div>
		<% end %>
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-12">
					<div class="row">
						<div class="col-md-12">
							<div class="form-group <%= 'has-error' if @phone_provider.errors[:name].present? %>" data-content="<%= @phone_provider.errors[:name].try(:join, ',') %>">
								<%= f.label :name, class: 'control-label' %>
								<%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
							</div>
							<div class="form-group">
								<%= f.label :description, class: 'control-label' %>
								<%= f.text_area :description, { size: '40x5', class: 'form-control', placeholder: 'Description' } %>
							</div>
							<div class="form-group col-md-12">
								<div class="actions pull-right">
									<%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, phone_providers_path, class: 'btn btn-sm btn-primary' %>
									<%= f.submit :class => 'btn btn-sm btn-success', :id => 'phone_provider_submit' %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>